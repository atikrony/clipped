{
  "name": "clipped",
  "version": "1.0.8",
  "description": "Native Linux Clipboard Manager with Real System Integration",
  "main": "main.js",
  "author": {
    "name": "Clipped Developer",
    "email": "dev@clipped.com"
  },
  "license": "MIT",
  "keywords": [
    "clipboard",
    "manager",
    "linux",
    "native",
    "desktop",
    "productivity"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "bin": {
    "clipped": "/opt/Clipped/clipped"
  },
  "build": {
    "appId": "com.clipped.app",
    "productName": "Clipped",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "style.css",
      "assets/**/*",
      "uninstall.sh",
      "uninstall-deb.sh",
      "UNINSTALL.md",
      "!build"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/note.png",
      "desktop": {
        "Name": "Clipped",
        "Comment": "Native Linux Clipboard Manager with Real System Integration",
        "GenericName": "Clipboard Manager",
        "Keywords": "clipboard;manager;copy;paste;productivity",
        "StartupNotify": "false",
        "Terminal": "false",
        "Categories": "Utility;System;",
        "Icon": "clipped"
      },
      "maintainer": "Clipped Developer <dev@clipped.com>",
      "vendor": "Clipped",
      "synopsis": "Native Linux Clipboard Manager",
      "description": "A powerful clipboard manager with system tray integration, global hotkeys, and emoji support. Manage your clipboard history with ease and boost your productivity.",
      "executableName": "clipped"
    },
    "deb": {
      "afterInstall": "build/postinstall.sh",
      "fpm": [
        "--after-install=build/postinstall.sh"
      ]
    }
  }
}
